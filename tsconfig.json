{
  "compilerOptions": {
    // Target ES2017 for better browser compatibility
    // This ensures the compiled JavaScript works in modern browsers
    "target": "ES2017",
    // Use ES2020 library for modern JavaScript features
    // This includes features like optional chaining and nullish coalescing
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020"
    ],
    // Allow JavaScript files to be compiled
    // This is useful for gradual migration from JS to TS
    "allowJs": true,
    // Skip type checking of declaration files
    // This improves compilation speed
    "skipLibCheck": true,
    // Ensure strict type checking
    // This catches more potential errors at compile time
    "strict": true,
    // Force consistent casing in file names
    // This prevents issues on case-sensitive file systems
    "forceConsistentCasingInFileNames": true,
    // Don't emit output files
    // Next.js handles the compilation
    "noEmit": true,
    // Use ES modules for better tree shaking
    "esModuleInterop": true,
    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true,
    // Enable all strict type checking options
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Enable advanced type checking features
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    // Module resolution settings
    "module": "ESNext",
    "moduleResolution": "bundler",
    // Enable JSX support for React components
    "jsx": "preserve",
    // Enable incremental compilation for faster builds
    "incremental": true,
    // Enable source maps for better debugging
    "sourceMap": true,
    // Base URL for module resolution
    "baseUrl": ".",
    // Path mapping for cleaner imports
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/data/*": [
        "./src/data/*"
      ],
      "@/utils/*": [
        "./src/lib/utils.ts"
      ]
    },
    // Include React types
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  // Include files and directories to be compiled
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  // Exclude files and directories from compilation
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}
